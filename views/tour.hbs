  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css?family=Lato:300,300i,700"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="css/style.css" />
    <link rel="shortcut icon" type="image/png" href="img/favicon.png" />

    <title>Natours | name</title>

  </head>


<section class="section-header">
    <div class="header__hero">
        <div class="header__hero-overlay">
            <img class==".header__hero-img" src="/img/tours/{{tour.imageCover}}" />
        </div>
    </div>
    <div class="heading-box">
    <h1 class="heading-primary">
        <span
        >{{tour.name}} tour</span
        >
    </h1>
    <div class="heading-box__group">
        <div class="heading-box__detail">
        <svg class="heading-box__icon">
            <use xlink:href="/img/icons.svg#icon-clock"></use>
        </svg>
        <span class="heading-box__text">{{tour.duration}}</span>
        </div>
        <div class="heading-box__detail">
        <svg class="heading-box__icon">
            <use xlink:href="/img/icons.svg#icon-map-pin"></use>
        </svg>
        <span class="heading-box__text">{{tour.startLocation.description}}</span>
        </div>
    </div>
    </div>
</section>

<section class="section-description">
    <div class="overview-box">
    <div>
        <div class="overview-box__group">
        <h2 class="heading-secondary ma-bt-lg">Quick facts</h2>
        {{#each tour.details}} 
        <div class="overview-box__detail">
            <svg class="overview-box__icon">
            <use xlink:href="/img/icons.svg#icon-{{this.icon}}"></use>
            </svg>
            <span class="overview-box__label">{{this.label}}</span>
            <span class="overview-box__text">{{this.text}}</span>
        </div>
        {{/each}}
        </div>

        <div class="overview-box__group">
        <h2 class="heading-secondary ma-bt-lg">Your tour guides</h2>
        {{#each tour.guides}}
        <div class="overview-box__detail">
            <img
            src="/img/users/{{this.photo}}"
            alt={{this.name}}
            class="overview-box__img"
            />
          <span class="overview-box__label">{{role this.role}}</span>
            
            <span class="overview-box__text">{{this.name}}</span>
        </div>
        {{/each}}

        </div>
    </div>
    </div>

    <div class="description-box">
    <h2 class="heading-secondary ma-bt-lg">About {{tour.name}} tour</h2>
        <p class="description__text">
            {{breakLines tour.description}}
    </p>
    </div>
</section>

<section class="section-pictures">
    <div class="picture-box">
    <img
        class="picture-box__img picture-box__img--1"
        src="/img/tours/tour-5-1.jpg"
        alt="The Park Camper Tour 1"
    />
    </div>
    <div class="picture-box">
    <img
        class="picture-box__img picture-box__img--2"
        src="/img/tours/tour-5-2.jpg"
        alt="The Park Camper Tour 1"
    />
    </div>
    <div class="picture-box">
    <img
        class="picture-box__img picture-box__img--3"
        src="/img/tours/tour-5-3.jpg"
        alt="The Park Camper Tour 1"
    />
    </div>
</section>

<section class="section-map">
    <div id="map" data-locations={{jsonStringify tour.locations}}></div>
    
</section>

<section class="section-reviews">
    <div class="reviews">
        {{#each tour.reviews}}
    <div class="reviews__card">
        <div class="reviews__avatar">
        <img
            src="/img/users/{{this.user.photo}}"
            alt={{this.user.photo}}
            class="reviews__avatar-img"
        />
        <h6 class="reviews__user">{{this.user.name}}</h6>
        </div>
        <p class="reviews__text">
        {{this.review}}
        </p>
        <div class="reviews__rating">
           
        <svg class="reviews__star reviews__star--active">
            <use xlink:href="img/icons.svg#icon-star"></use>
        </svg>
        </div>
    </div>
    {{/each}}
    </div>
</section>

<section class="section-cta">
    <div class="cta">
    <div class="cta__img cta__img--logo">
        <img src="/img/logo-white.png" alt="Natours logo" class="" />
    </div>
    <img src="/img/tours/{{image1 tour.images}}" alt="" class="cta__img cta__img--1" />
    <img src="/img/tours/{{image2 tour.images}}" alt="" class="cta__img cta__img--2" />
    

    <div class="cta__content">
        <h2 class="heading-secondary">What are you waiting for?</h2>
        <p class="cta__text">
        {{tour.duration}} days. 1 adventure. Infinite memories. Make it yours today!
        </p>

        <button class="btn btn--green span-all-rows " id="book-tour" data-tour-id={{tour.id}}>Book tour now!</button>
    </div>
    </div>
</section>